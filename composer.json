{
    "name": "hevinci/competency-bundle",
    "type": "claroline-plugin",
    "require": {
        "php": ">=5.4.1",
        "claroline/core-bundle": "~6.2",
        "justinrainbow/json-schema": "~1.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.6",
        "mikey179/vfsStream": "~1.5"
    },
    "autoload": {
        "psr-0": { "HeVinci\\CompetencyBundle": "" }
    },
    "target-dir": "HeVinci/CompetencyBundle",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "Claroline\\BundleRecorder\\ScriptHandler::buildBundleFile"
        ]
    },
    "config": {
        "vendor-dir": "../vendor"
    }
}
