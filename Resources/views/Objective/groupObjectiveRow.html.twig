{% set type = type is defined ? type : 'group' %}

<tr>
    <td class="{{ type }}-name">
        {{ name }}
    </td>
    <td class="large-cell">
        {{ type == 'objective' ? framework : '-' }}
    </td>
    <td class="x-small-cell">
        <a href="#">
            <i class="fa fa-search-plus"></i>
        </a>
    </td>
    <td class="x-small-cell">
        <a href="#"
           data-toggle="tooltip"
           data-placement="left"
           title="{{ 'users'|trans({}, 'platform') }}">
            <i class="fa fa-group"></i>
        </a>
    </td>
    <td class="x-small-cell">
        {% if type == 'objective' %}
            <a href="#"
               data-toggle="tooltip"
               data-placement="left"
               title="{{ 'delete'|trans({}, 'platform') }}">
                <i class="fa fa-remove"></i>
            </a>
        {% else %}
            -
        {% endif %}
    </td>
</tr>